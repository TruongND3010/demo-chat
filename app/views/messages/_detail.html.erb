<% if message.user_id == current_user.id %>
  <div class="container">
    <p><%= message.content %></p>
    <span class="time-right"><%= message.created_at %></span>
  </div>
<% else %>
  <div class="container darker">
    <p><%= message.content %></p>
    <span class="time-left"><%= message.created_at %></span>
  </div>
<% end %>